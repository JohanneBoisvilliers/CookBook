<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        tools:context=".addRecipePage.AddRecipeActvity">

        <TextView
            android:id="@+id/new_recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_to_border"
            android:layout_marginTop="@dimen/margin_title"
            android:fontFamily="@font/segoepr"
            android:paddingTop="@dimen/margin_title_toolbar"
            android:paddingBottom="@dimen/margin_title_toolbar"
            android:text="@string/add_recipe_title"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/title_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/recipe_name_textfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_to_border"
            android:hint="@string/recipe_title"
            app:layout_constraintTop_toBottomOf="@+id/new_recipe_title">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_title"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_category"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/recipe_category"
            app:layout_constraintStart_toStartOf="@+id/recipe_name_textfield"
            app:layout_constraintTop_toTopOf="@+id/recipe_category" />

        <Spinner
            android:id="@+id/recipe_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_to_border"
            app:layout_constraintLeft_toRightOf="@id/category_text"
            app:layout_constraintRight_toLeftOf="@id/online_recipe_text"
            app:layout_constraintTop_toBottomOf="@+id/recipe_name_textfield" />

        <TextView
            android:id="@+id/online_recipe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/online_title"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_category"
            app:layout_constraintLeft_toRightOf="@id/recipe_category"
            app:layout_constraintRight_toLeftOf="@id/online_checkbox"
            app:layout_constraintTop_toTopOf="@+id/recipe_category" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/online_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_to_border"
            android:onClick="onClicked"
            app:layout_constraintBottom_toBottomOf="@+id/online_recipe_text"
            app:layout_constraintLeft_toRightOf="@id/online_recipe_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/online_recipe_text" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/recipe_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_to_border"
            android:hint="@string/hint_add_recipe_url"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/recipe_category">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/ingredient_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_to_border"
            android:text="@string/ingredients_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/recipe_category"
            app:layout_constraintStart_toStartOf="@+id/category_text"
            app:layout_constraintTop_toBottomOf="@+id/recipe_url" />

        <RelativeLayout
            android:id="@+id/ingredient_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_to_border"
            app:layout_constraintTop_toBottomOf="@id/ingredient_details_title">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/new_recipe_ingredient_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_ingredient_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_to_border"
            app:layout_constraintBottom_toTopOf="@id/add_ingredient_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredient_list_container">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_to_border">

                <TextView
                    android:id="@+id/qt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qt. :"
                    app:layout_constraintBottom_toBottomOf="@id/qt_field"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/qt_field" />

                <EditText
                    android:id="@+id/qt_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_to_border"
                    android:layout_marginEnd="@dimen/margin_to_border"
                    app:layout_constraintLeft_toRightOf="@+id/qt_text"
                    app:layout_constraintRight_toLeftOf="@id/unit_text"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/unit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit :"
                    app:layout_constraintBottom_toBottomOf="@id/qt_field"
                    app:layout_constraintLeft_toRightOf="@id/qt_field"
                    app:layout_constraintRight_toLeftOf="@+id/unit_spinner"
                    app:layout_constraintTop_toTopOf="@id/qt_field" />

                <Spinner
                    android:id="@+id/unit_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_to_border"
                    app:layout_constraintBottom_toBottomOf="@id/qt_field"
                    app:layout_constraintLeft_toRightOf="@id/unit_text"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/qt_field" />


                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    app:layout_constraintBottom_toBottomOf="@id/name_field"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/qt_field" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/name_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_to_border"
                    app:layout_constraintLeft_toRightOf="@+id/name_text"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/qt_field" />

                <Button
                    android:id="@+id/cancel_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_to_border"
                    android:background="@android:color/transparent"
                    android:text="Cancel"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/save_button"
                    app:layout_constraintTop_toBottomOf="@+id/name_field" />

                <Button
                    android:id="@+id/save_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_to_border"
                    android:background="@android:color/transparent"
                    android:text="Add"
                    android:textColor="@color/colorAccent"

                    app:layout_constraintLeft_toRightOf="@id/cancel_button"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_field" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/add_ingredient_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_to_border"
            android:background="@drawable/background_white_button"
            android:paddingLeft="@dimen/margin_in_button"
            android:paddingRight="@dimen/margin_in_button"
            android:text="@string/add_ingredient_button"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_ingredient_fields"
            android:onClick="onClicked"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>