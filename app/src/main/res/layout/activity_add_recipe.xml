<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_to_border">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:paddingBottom="@dimen/margin_to_border"
            tools:context=".addRecipePage.AddRecipeActvity">

            <TextView
                android:id="@+id/new_recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_to_border"
                android:layout_marginTop="@dimen/margin_title"
                android:fontFamily="@font/segoepr"
                android:paddingTop="@dimen/margin_title_toolbar"
                android:paddingBottom="@dimen/margin_title_toolbar"
                android:text="@string/add_recipe_title"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/title_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/recipe_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:hint="@string/recipe_title"
                app:layout_constraintTop_toBottomOf="@+id/new_recipe_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recipe_name_textfield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- CATEGORY -->
            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_to_border"
                android:text="@string/category_title"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/recipe_category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/recipe_category" />

            <Spinner
                android:id="@+id/recipe_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_to_border"
                app:layout_constraintLeft_toRightOf="@id/category_text"
                app:layout_constraintRight_toLeftOf="@id/online_recipe_text"
                app:layout_constraintTop_toBottomOf="@+id/recipe_name_container" />
            <!-- ONLINE RECIPE -->
            <TextView
                android:id="@+id/online_recipe_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/online_title"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_category"
                app:layout_constraintLeft_toRightOf="@id/recipe_category"
                app:layout_constraintRight_toLeftOf="@id/online_checkbox"
                app:layout_constraintTop_toTopOf="@+id/recipe_category" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/online_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_to_border"
                android:onClick="onClicked"
                app:layout_constraintBottom_toBottomOf="@+id/online_recipe_text"
                app:layout_constraintLeft_toRightOf="@id/online_recipe_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/online_recipe_text" />
            <!-- RECIPE URL -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/recipe_url_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_to_border"
                android:hint="@string/hint_add_recipe_url"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/recipe_category">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recipe_url_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_go_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_to_border"
        android:src="@drawable/next"
        android:tint="@color/colorPrimary" />
</RelativeLayout>