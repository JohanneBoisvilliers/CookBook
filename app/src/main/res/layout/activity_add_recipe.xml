<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addRecipePage.AddRecipeActvity"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/new_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_to_border"
        android:layout_marginTop="@dimen/margin_title"
        android:fontFamily="@font/segoepr"
        android:paddingTop="@dimen/margin_title_toolbar"
        android:paddingBottom="@dimen/margin_title_toolbar"
        android:text="@string/add_recipe_title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/title_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/recipe_name_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_to_border"
        android:hint="@string/recipe_title"
        app:layout_constraintTop_toBottomOf="@+id/new_recipe_title">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_title"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recipe_category"
        app:layout_constraintStart_toStartOf="@+id/recipe_name_textfield"
        app:layout_constraintTop_toTopOf="@+id/recipe_category" />

    <Spinner
        android:id="@+id/recipe_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_to_border"
        app:layout_constraintLeft_toRightOf="@id/category_text"
        app:layout_constraintRight_toLeftOf="@id/online_recipe_text"
        app:layout_constraintTop_toBottomOf="@+id/recipe_name_textfield" />

    <TextView
        android:id="@+id/online_recipe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/online_title"
        app:layout_constraintBottom_toBottomOf="@+id/recipe_category"
        app:layout_constraintLeft_toRightOf="@id/recipe_category"
        app:layout_constraintRight_toLeftOf="@id/online_checkbox"
        app:layout_constraintTop_toTopOf="@+id/recipe_category" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/online_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_to_border"
        app:layout_constraintBottom_toBottomOf="@+id/online_recipe_text"
        app:layout_constraintLeft_toRightOf="@id/online_recipe_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/online_recipe_text"
        android:onClick="onCheckBoxClicked"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/recipe_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_to_border"
        android:hint="@string/hint_add_recipe_url"
        app:layout_constraintTop_toBottomOf="@+id/recipe_category"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/ingredient_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredients_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recipe_category"
        app:layout_constraintStart_toStartOf="@+id/category_text"
        app:layout_constraintTop_toBottomOf="@+id/recipe_url"
        android:layout_marginTop="@dimen/margin_to_border"/>

    <RelativeLayout
        android:id="@+id/ingredient_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingredient_details_title"
        android:layout_margin="@dimen/margin_to_border">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_recipe_ingredient_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <Button
        android:id="@+id/add_ingredient_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_button"
        android:paddingLeft="@dimen/margin_in_button"
        android:paddingRight="@dimen/margin_in_button"
        android:text="@string/add_ingredient_button"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/ingredient_list_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



    <Button
        android:id="@+id/url_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_button"
        android:paddingLeft="@dimen/margin_in_button"
        android:paddingRight="@dimen/margin_in_button"
        android:text="@string/add_recipe_button_url"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>