<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_share_bottom_sheet"
        android:layout_marginStart="@dimen/margin_share_bottom_sheet"
        android:layout_marginEnd="@dimen/margin_share_bottom_sheet"
        android:text="@string/share_bottom_sheet_title"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/shared_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_share_bottom_sheet"
        android:maxLength="255"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_title" />

</androidx.constraintlayout.widget.ConstraintLayout>