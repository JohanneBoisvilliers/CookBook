<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/half_margin_to_border">

        <TextView
            android:id="@+id/category_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starter"
            android:background="@drawable/category_container_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="@dimen/category_text_size"
            android:paddingStart="@dimen/margin_to_border"
            android:paddingEnd="@dimen/margin_to_border"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_container"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/recipe_photo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/no_photo_low" />
            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="@dimen/photo_profile_size"
                android:layout_height="@dimen/photo_profile_size"
                android:layout_marginTop="@dimen/margin_to_border"
                android:layout_marginStart="@dimen/margin_to_border"
                android:src="@drawable/no_photo_low"
                android:layout_below="@id/recipe_photo"/>
            <LinearLayout
                android:id="@+id/details_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_to_border"
                android:layout_toEndOf="@+id/user_photo"
                android:layout_alignTop="@id/user_photo"
                android:layout_alignBottom="@id/user_photo"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/posted_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textStyle="italic"
                    android:text="@string/posted_by"/>
                <TextView
                    android:id="@+id/shared_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLight"
                    android:textStyle="italic"
                    android:text="@string/timestamp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/social_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_photo"
                android:layout_marginStart="@dimen/margin_to_border"
                android:layout_marginEnd="@dimen/margin_to_border"
                android:layout_marginTop="@dimen/half_margin_to_border"
                android:layout_marginBottom="@dimen/margin_to_border"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>